<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="ScreenStreamer.MainWindow"
        Title="Screen Streamer" Width="800" Height="600"
        xmlns:local="clr-namespace:ScreenStreamer"
        x:DataType="local:MainWindow"
>

    <StackPanel>
        <Image Source="{Binding LatestBitmap}" Stretch="Uniform" Width="800" Height="450"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Name="StartButton" Content="Start" Click="OnStartStreaming"/>
            <Button Name="StopButton" Content="Stop" Click="OnStopStreaming" IsEnabled="False" Margin="10,0,0,0"/>
        </StackPanel>
        <TextBlock Name="StatusText" HorizontalAlignment="Center" Margin="0,10,0,0"/>
    </StackPanel>
</Window>
